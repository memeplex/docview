{
  "name": "insight",
  "displayName": "Insight",
  "description": "Build and view HTML and PDF documents",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": ["Visualization", "Data Science", "Other"],
  "keywords": [
    "pdf", "html", "viewer", "preview", "watchdog", "pandoc", "markdown"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/memeplex/insight.git"
  },
  "bugs": {
    "url": "https://github.com/memeplex/insight/issues"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "insight.build",
        "title": "Build document"
      },
      {
        "command": "insight.view",
        "title": "Build and view document"
      },
      {
        "command": "insight.disconnect",
        "title": "Disconnect builder from document"
      }
    ],
    "configuration": {
      "title": "Insight",
      "properties": {
        "insight.rules": {
          "type": "object",
          "description": "",
          "default": {},
          "additionalProperties": {
            "type": "object",
            "description": "",
            "properties": {
              "task": {
                "type": "string",
                "description": ""
              },
              "variants": {
                "type": "object",
                "description": "",
                "additionalProperties": { "enum": ["html", "pdf"] }
              },
              "input": {
                "type": "string",
                "description": "",
                "default": "*.md"
              },
              "output": {
                "type": "string",
                "description": "",
                "default": "{{dir}}/{{name}}.{{format}}"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}