{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pandoc",
      "type": "shell",
      "command": "pandoc {{input}} -s -t {{variant}} -o {{output}}",
      "group": "build"
    },
    {
      "label": "typst",
      "type": "shell",
      "command": "typst {{name}} {{variant}}",
      "group": "build"
    },
    {
      "label": "myst",
      "type": "shell",
      "command": "myst {{name}} {{variant}}",
      "group": "build"
    },
  ]
}